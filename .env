# Tamaño máximo permitido (0 = sin límite; NO recomendado en prod)
MAX_FILE_BYTES=500MB

# Tamaño del bloque de lectura/escritura
CHUNK_SIZE=1MB

# Carpeta donde se guardan las subidas (ruta absoluta o relativa)
UPLOAD_DIR=uploads

# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost
